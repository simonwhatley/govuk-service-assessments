{% extends "layouts/base.njk" %}

{% block beforeContent %}
{{ appBreadcrumbs({
  title: title,
  items: collections.all,
  key: eleventyNavigation.key,
  classes: "govuk-!-display-none-print"
}) if eleventyNavigation and eleventyNavigation.key and eleventyNavigation.parent }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {% if caption %}
          <span class="govuk-caption-xl">{{ caption }}</span>
        {% endif %}
        {{ title }}
      </h1>
      <p class="govuk-body-l">{{ description }}</p>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      {{ appSecondaryNavigation({
        label: "Sub navigation",
        items: [
          {
            href: page.url | replace("prompts/", ""),
            text: "Overview",
            active: false
          },
          {
            href: page.url,
            text: "Prompts",
            active: true
          }
        ]
      }) }}
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {%- if content | length  %}
        <div class="app-markdown">
          {{- content | safe -}}
        </div>
      {% endif -%}
    </div>
  </div>
{% endblock %}
