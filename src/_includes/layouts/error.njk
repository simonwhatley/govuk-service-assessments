{% block beforeContent %}

{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ title }}
      </h1>
    </div>
  </div>
  {%- if content | length  %}
    <div class="govuk-grid-row">
      <article class="govuk-grid-column-two-thirds app-markdown">
        {{- content | safe -}}
      </article>
    </div>
  {% endif -%}
{% endblock %}
