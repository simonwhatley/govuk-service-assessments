{% extends "layouts/base.njk" %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: back
}) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>
      {%- if content | length  %}
        <div class="app-markdown">
          {{- content | safe -}}
        </div>
      {% endif -%}
    </div>
  </div>
{% endblock %}
